{
	"name": "visitbrooklyn/brooklyn-ai-planner",
	"description": "Brooklyn AI Trip Planner WordPress plugin.",
	"type": "wordpress-plugin",
	"license": "proprietary",
	"require": {
		"php": "^8.2"
	},
	"require-dev": {
		"brain/monkey": "^2.6",
		"phpunit/phpunit": "^10.5",
		"squizlabs/php_codesniffer": "^3.9",
		"phpstan/phpstan": "^1.11",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1",
		"wp-coding-standards/wpcs": "^3.1",
		"php-stubs/wordpress-stubs": "^6.5"
	},
	"autoload": {
		"psr-4": {
			"BrooklynAI\\": "includes/",
			"BrooklynAI\\Admin\\": "admin/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"BrooklynAI\\Tests\\": "tests/phpunit/"
		}
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"lint:php": "php -d memory_limit=512M vendor/bin/phpcs",
		"stan": "vendor/bin/phpstan --memory-limit=1G analyse"
	}
}
